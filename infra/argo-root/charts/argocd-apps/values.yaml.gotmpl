applications:
  - name: root-application
    namespace: argocd
    project: {{ .Environment.Name }}
    source:
      repoURL: https://github.com/hiroki-it/kubernetes-network-practice.git
      targetRevision: main
      path: ./infra/argo-child
      helm:
        valueFiles:
          - values-{{ .Environment.Name }}.yaml
    destination:
      server: https://kubernetes.default.svc
      namespace: argocd


projects:
  - name: prd
    namespace: argocd
    description: prd
    sourceRepos:
      - '*'
    destinations:
      - server: https://kubernetes.default.svc
        namespace: '*'
    clusterResourceWhitelist:
      - group: '*'
        kind: '*'
